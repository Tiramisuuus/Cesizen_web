{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/emotions-tracker-list.css') }}">
{% endblock %}

{% block body %}
    {% include 'components/organisms/header.html.twig' %}

    <main class="tracker-list-container">
        <h1 class="tracker-title">Mes √©motions enregistr√©es</h1>

        <section class="filters">
            <form method="get" class="filters-form" id="tracker-filter-form">
                <input
                        type="text"
                        name="search"
                        placeholder="Recherche par titre ou description"
                        value="{{ app.request.get('search') }}"
                >

                <select name="emotion">
                    <option value="">Toutes les √©motions</option>
                    {% for emotion in allEmotions %}
                        <option value="{{ emotion.id }}" {{ app.request.get('emotion') == emotion.id ? 'selected' : '' }}>
                            {{ emotion.name }}
                        </option>
                    {% endfor %}
                </select>

                <input
                        type="date"
                        name="date"
                        value="{{ app.request.get('date') }}"
                >
            </form>
        </section>

        {% if trackers is empty %}
            <p class="no-trackers">Aucun traqueur trouv√© pour l‚Äôinstant.</p>
        {% else %}
            <section class="trackers-list">
                {% for tracker in trackers %}
                    <article class="tracker-card">
                        <header class="tracker-header">
                            <h2>{{ tracker.name ?: 'Sans titre' }}</h2>
                        </header>

                        <p class="tracker-description">
                            {{ tracker.description ?: 'Aucune description fournie.' }}
                        </p>

                        <div class="tracker-emotions">
                            {% for emotion in tracker.secondaryEmotions %}
                                <span class="emotion-tag">{{ emotion.name }}</span>
                            {% endfor %}
                        </div>

                        <footer class="tracker-footer">

                            <div class="actions">
                                <a href="{{ path('emotions-tracker-edit', {'id': tracker.id}) }}" class="btn-edit" title="Modifier">
                                    ‚úèÔ∏è
                                </a>
                                <form method="post" action="{{ path('emotions-tracker-delete', {'id': tracker.id}) }}" onsubmit="return confirm('Supprimer ce traqueur ?');">
                                    <button type="submit" class="btn-delete" title="Supprimer">üóëÔ∏è</button>
                                </form>
                            </div>
                        </footer>
                    </article>
                {% endfor %}
            </section>
        {% endif %}
    </main>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('tracker-filter-form');
            const inputs = form.querySelectorAll('input, select');

            inputs.forEach(el => {
                el.addEventListener('change', () => form.submit());

                if (el.type === 'text') {
                    let timeout;
                    el.addEventListener('input', () => {
                        clearTimeout(timeout);
                        timeout = setTimeout(() => form.submit(), 500);
                    });
                }
            });
        });
    </script>
{% endblock %}
