<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Inscription</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('styles/pages/auth.css') }}">
</head>
<body class="auth-body">
<main class="auth-container">
    <div class="auth-card">
        <h1 class="auth-title">Inscription</h1>
        {{ form_start(registerForm) }}
        <div class="auth-field">
            {{ form_label(registerForm.email) }}
            {{ form_widget(registerForm.email) }}
        </div>
        <div class="auth-field">
            {{ form_label(registerForm.plainPassword) }}
            {{ form_widget(registerForm.plainPassword) }}
        </div>
        <button type="submit" class="auth-btn">Créer mon compte</button>
        {{ form_end(registerForm) }}
        <p class="auth-link">Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
    </div>
</main>
</body>
</html>
