
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/edit-user.css') }}">
{% endblock %}

{% block body %}
    {% include 'components/organisms/header.html.twig' %}

    <main class="admin-container">
        <h1 class="admin-title">Ã‰diter utilisateur #{{ user.id }}</h1>
        {% if form.vars.errors|length > 0 %}
            <div class="form-global-errors">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'class':'admin-form'}}) }}

        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_widget(form.username) }}
            {{ form_errors(form.username) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.role) }}
            {{ form_widget(form.role) }}
            {{ form_errors(form.role) }}
        </div>

        <div class="form-group checkbox-group">
            {{ form_widget(form.isActive) }}
            {{ form_label(form.isActive) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary">Enregistrer</button>
            <a href="{{ path('admin_users_index') }}" class="btn-secondary">Retour</a>
        </div>

        {{ form_end(form) }}
    </main>
{% endblock %}
