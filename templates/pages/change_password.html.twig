
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/change-password.css') }}">
{% endblock %}

{% block body %}
    {% include 'components/organisms/header.html.twig' %}

    <main class="auth-container">
        <div class="auth-card">
            <h1 class="auth-title">Changer de mot de passe</h1>

            {{ form_start(changePasswordForm) }}
            {{ form_row(changePasswordForm.currentPassword) }}
            {{ form_row(changePasswordForm.newPassword.first) }}
            {{ form_row(changePasswordForm.newPassword.second) }}

            <button type="submit" class="auth-btn">Mettre à jour</button>
            {{ form_end(changePasswordForm) }}

            <p class="auth-link">
                <a href="/profile">&larr; Retour à mon profil</a>
            </p>
        </div>
    </main>
{% endblock %}
